{% extends "base.html.twig" %}

{% block title %}
    Movies Page
{% endblock %}

{% block body %}

    <div style="margin:30px">
        <h1>{{ author }}</h1>

       {% if app.user %}
            <div class="mx-auto w-4/5 my-8">
                <a href="/movies/create" class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all
                    bg-gray-800 text-white hover:bg-white hover:text-gray-800">Create New movie</a>
            </div>
        {% endif %}

        <h4 style="margin-bottom: 30px"> 
            {% if title %}
                {{ title }}
            {% else %}
                title is empty
            {% endif %}

            ({{ movies|length }})
        </h4>

        <div style="margin-bottom: 30px">
            <ul>
                {% for movie in movies %}
                    <li><a href="/movie/{{ movie.id }}">{{ movie.title }}</a></li>
                {% endfor %}
            </ul>
        </div>

        <img src="{{ asset('images/symfony.png') }}" height="150" width="150" alt="symfony.png">

        
    </div>

{% endblock %}
